
pipeline {

  agent any
  tools {
       maven 'Maven'
   }
  stages {

       stage('SonarCloudScan1') {
       
	       environment {
	    		 SCANNER_HOME = tool 'sonarScanner'
	  		}
           steps {
              snDevOpsStep()
				snDevOpsChange(ignoreErrors: true)
               withSonarQubeEnv('Sonar_Cloud') {
			       sh '${SCANNER_HOME}/bin/sonar-scanner -Dproject.settings=${SCANNER_HOME}/conf/sonar-scanner-cloud.properties'
		       
        		}
	       
           }
           
       }
 	
 	stage('SonarCloudScan2') {
       
	       environment {
	    		 SCANNER_HOME = tool 'sonarScanner'
	  		}
           steps {
              snDevOpsStep()
				snDevOpsChange(ignoreErrors: true)
               withSonarQubeEnv('Sonar_Cloud') {
			       sh '${SCANNER_HOME}/bin/sonar-scanner -Dproject.settings=${SCANNER_HOME}/conf/sonar-scanner-cloud.properties'
		       
        		}
	       
           }
           
       }
 	}
}
